<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table class="container">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.description %></td>
        <div class="btn-group">
          <td><%= link_to 'Comments', post, class: "btn btn-info" %></td>
        </div>
        <% if post.user == current_user %>
          <div class="btn-group">
            <td><%= link_to 'Edit', edit_post_path(post), class: "btn btn-warning" %>
          </div>
          <div class="btn-group">
            <%= link_to 'Delete Post', post, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger" %></td>
          </div>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>


